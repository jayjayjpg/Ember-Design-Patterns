<form data-test-edit-user-form>
  <div class="form-group">
    <label>First Name</label>
    {{input class="form-control" value=user.firstName}}
  </div>
  <div class="form-group">
    <label>Last Name</label>
    {{input class="form-control" value=user.lastName}}
  </div>
  <div class="form-group">
    <label>Password</label>
    {{input class="form-control" value=user.password}}
  </div>
  <button class="btn btn-{{if saveUser.isIdle "success" "default"}}" disabled={{this.isSubmitDisabled}} type="submit"
    {{action "saveUser"}}>
    {{#if saveUser.isRunning}}
      <div class="spinner-border" role="status">
        <span class="sr-only">Saving...</span>
      </div>
    {{else}}
      Save
    {{/if}}
  </button>
  {{#if saveConfirmationTextVisible}}
    <span class="text-success ml-2">
      Saved!
      <FaIcon @icon="check" />
    </span>
  {{/if}}
  {{#if whatWillChange}}
    <div class="my-4">
      What will change:
      <ul>
        {{#each-in whatWillChange as | change values | }}
          <li>{{change}} changed => {{values}}</li>
        {{/each-in}}
      </ul>
    </div>
  {{/if}}
</form>