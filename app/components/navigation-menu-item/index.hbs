<@List.item as |Item|>
  {{#if @routeName}}
    <li class="p-4 nav-item">
      <a class="nav-link {{if Item.isActive 'active'}}"
        {{action 'transitionTo'}}
        href={{url}}
      >
        {{yield}}
      </a>
    </li>
  {{else}}
    <li class="p-4 nav-item dropdown {{if Item.isActive 'active'}}">
      {{yield (hash
        submenu=(component 'navigation-submenu'
          Item=Item
          tetherTarget=(concat '#' elementId)
          attachment='top left'
          targetAttachment='bottom left'
        )
      )}} 
    </li>
  {{/if}}
</@List.item>
