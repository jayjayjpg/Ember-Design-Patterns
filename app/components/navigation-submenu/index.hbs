{{#if Item.isActive}}

  {{#liquid-tether
    target=@tetherTarget
    attachment=@attachment
    targetAttachment=@targetAttachment
    class="fading-menu"
  }}
    <@Item.sublist as |List|>
      <ul class="list-unstyled navigation-submenu px-3 py-2 mr-2">
        {{yield (hash 
          item=(component 'navigation-submenu-item' List=List)
        )}}
      </ul>
    </@Item.sublist>
  {{/liquid-tether}}
{{/if}}